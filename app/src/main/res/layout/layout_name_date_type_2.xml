        style="@style/font_name_pos_red"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_name_pos"
        android:text="@string/pos_8"
        android:textStyle="bold"
        style="@style/font_name_pos_red"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_name_pos"
        android:text="@string/pos_7"
        style="@style/font_name_pos_black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_name_pos_3x"
        android:text="@string/pos_6"
        style="@style/font_name_pos_black"

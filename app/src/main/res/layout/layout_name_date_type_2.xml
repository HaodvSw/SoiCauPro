        android:layout_width="match_parent"
        android:layout_height="@dimen/height_name_pos_2x"
        android:text="@string/pos_3"
        style="@style/font_name_pos_black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_name_pos"
        android:text="@string/pos_2"
        style="@style/font_name_pos_black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_name_pos"
        android:text="@string/pos_1"
        style="@style/font_name_pos_red"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_name_pos"
        android:text="@string/pos_db"
        style="@style/font_name_pos_red"
        />


</LinearLayout>